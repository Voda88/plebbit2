<% provide(:title,"#{@user.first_name} #{@user.last_name}")%>
<div class="container">
	<h1><%= full_name(@user) %> </h1>
	<div class="topic-karma">
		<h3>topic karma</h3>
		<h4 class="upvotes"><%= count_voteable_upvotes_for_user(@user,'Topic')%></h4>
		<h4 class="downvotes"><%= count_voteable_downvotes_for_user(@user,'Topic')%></h4>
	</div>
	<div class="comment-karma">
		<h3>comment karma</h3>
		<h4 class="upvotes"><%= count_voteable_upvotes_for_user(@user,'Comment')%></h4>
		<h4 class="downvotes"><%= count_voteable_downvotes_for_user(@user,'Comment')%></h4>
	</div>
	<div class="col-md-6">
		<% if @user.topics.any? %>
		<h3>Topics (<%= @user.topics.count %>)</h3>
		<ol class="topics">
			<%= render @user.topics %>
		</ol>
		<%= will_paginate @topics %>
		<% end %>
	</div>
	<div class="col-md-6">
		<% if @user.comments.any? %>
			<h3>Comments(<%= @comments.count %>)</h3>
			<ol class="topics">
				<%= render @comments %>
			</ol>
			<%= will_paginate @comments %>
		<% end %>
	</div>
</div>

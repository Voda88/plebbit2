<li id="topic-<%= topic.id %>">
  <% if current_user.admin? %>
  	<span class="user"><%= link_to full_name(topic.user), user_path(topic.user) %></span>
  <% end %>

  <span class="content">
  	<h1><%= link_to topic.title, topic_path(topic) %></h1>
    <% if topic.picture? %>
      <a href="#" class="thumbnail">
        <%= image_tag topic.picture.url  %>
      </a>
    <% end %>
  </span>

  <% if current_user.admin? %>
  	<%= link_to "delete", topic_path(topic), method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(topic.created_at) %> ago.
  </span>
</li>
<div class="voting">
  <span class="<%=has_voted(post)%>">Voted!</span> </br>
  <%=count_upvotes_for_voteable(post)%>
    <%= form_for [post, Vote.new] do |f| %>
    <%= f.hidden_field :user_id, value:@user.id %>
    <%= f.hidden_field :number, value: 1 %>
    <%= f.submit "upvote" %>
  <% end %>

  <%= count_downvotes_for_voteable(post)%>
    <%= form_for [post, Vote.new] do |f| %>
    <%= f.hidden_field :user_id, value:@user.id %>
    <%= f.hidden_field :number, value: -1 %>
    <%= f.submit "downvote" %>
  <% end %>
</div>